@model ASPCollegeBooking.Models.Rooms
@{
    ViewData["Title"] = "Details";
}
<h2>Room Details</h2>
<div class="container col-Margins">
    <hr />
    <dl class="dl-horizontal ">
        <dt>
            Room Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Color of the Event
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EventColor)
        </dd>

        <dt>
            Is the room bookable?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsBookable)
        </dd>
        <dt>
            Max number of students
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaxOccupancy)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>

</div>

