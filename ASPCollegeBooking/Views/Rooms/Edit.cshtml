@model ASPCollegeBooking.Models.Rooms
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Your Room</h2>

<hr />
<div class="row col-Margins">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Give it a title so people know who is using the room.</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventColor" class="control-label">Add an event color (sort of works)</label>
                <input asp-for="EventColor" class="form-control" />
                <span asp-validation-for="EventColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsBookable" class="control-label">Tick if you can you book this room</label>
                <input asp-for="IsBookable" class="form-control" />
                <span asp-validation-for="IsBookable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxOccupancy" class="control-label">How many people can the room take?</label>
                <input asp-for="MaxOccupancy" class="form-control" />
                <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
