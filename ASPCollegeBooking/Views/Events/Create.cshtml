<h2>Create a New Event</h2>
<form asp-action="Create" class="form-horizontal">
    <div class="row">
        <div class="col-md-4 col-Margins">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" id="Title" class=" form-control" autofocus />

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>


            </div>


            <div class="form-group">
                <label class="control-label">Tick if its for a Full Day</label>

                <input type="checkbox" data-toggle="collapse" data-target="#isfulldaymessage" asp-for="IsFullDay" class="form-control checkbox-inline" id="chkFullDay" />

                <div class="alert alert-info  collapse" id="isfulldaymessage">Just add the date fields. The times will be generated from 9-5pm.</div>

                <span asp-validation-for="IsFullDay" class="text-danger"></span>
            </div>


            <div class="form-group" id="datestart">
                <label asp-for="Start" class="control-label"></label>
                @Html.TextBoxFor(model => model.Start, htmlAttributes: new { @class = "form-control DTStart" })

                <span asp-validation-for="Start" class="text-danger"></span>
            </div>


            <div class="form-group" id="dateend">
                <label asp-for="End" class="control-label"></label>
                @Html.TextBoxFor(model => model.End, htmlAttributes: new { @class = "form-control DTEnd" })

                <span asp-validation-for="End" class="text-danger"></span>
            </div>





        </div>

        <!-- Add clearfix for only the required viewport-->
        <div class="clearfix visible-xs"></div>
        <div class="col-md-4 col-Margins">

            <div class="form-group">

                <label class="control-label">Choose Your Room</label>
                <select asp-for="ResourceId" asp-items="ViewBag.Roomlist" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>

                <label class="control-label">Show the room diagrams (at the bottom of the page)</label>

                <input type="checkbox" data-toggle="collapse" data-target="#isRoomDiagrammessage" class="form-control" id="chkRoomDiagrammessage" />



                @*<label class="control-label">Tick if its for a Full Day</label>

                        <input type="checkbox" data-toggle="collapse" data-target="#isfulldaymessage" asp-for="IsFullDay" class="form-control" id="chkFullDay"/>

                        <div class="alert alert-info  collapse" id="isfulldaymessage">Just add the date fields. The times will be generated from 9-5pm.</div>

                        <span asp-validation-for="IsFullDay" class="text-danger"></span>
                    </div>

                    <div class="form-group" id="datestart">
                        <label asp-for="Start" class="control-label"></label>
                        @Html.TextBoxFor(model => model.Start, htmlAttributes: new { @class = "form-control DTStart" })

                        <span asp-validation-for="Start" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="dateend">
                        <label asp-for="End" class="control-label"></label>
                        @Html.TextBoxFor(model => model.End, htmlAttributes: new { @class = "form-control DTEnd" })

                        <span asp-validation-for="End" class="text-danger"></span>*@

            </div>

        </div>

        <!-- Add clearfix for only the required viewport-->
        <div class="clearfix visible-xs"></div>
        <div class="col-md-4 col-Margins">
            <div class="form-group">

                <label class="control-label">Do you want it to repeat daily or weekly?</label>

                <input type="checkbox" data-toggle="collapse" data-target="#isRepeatmessage" class="form-control" id="chkrepeat" />

                <div class="collapse" id="isRepeatmessage">
                    <div class="alert alert-info">Just add many days or how many weeks you want. Weekends will be skipped in the calculation</div>

                    <label class="control-label ">How many Days repeat?</label>

                    <input asp-for="Days" class="form-control" min="0" value="0" />
                    <span asp-validation-for="Days" class="text-danger"></span>


                    <div class="form-group">
                        <label class="control-label">How many Weeks repeat?</label>

                        <input asp-for="Weeks" class="form-control" min="0" value="0" />

                        <span asp-validation-for="Weeks" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create your booking" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    @*<div class="alert alert-info img-responsive">
            <img src="~/images/upstairs.JPG" />
            <img src="~/images/upstairs.JPG" />
        </div>*@
    <a asp-action="Index">Back to List</a>
</div>



<div class="collapse alert alert-info" id="isRoomDiagrammessage">


    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="12000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>

        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/upstairs.JPG" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Rooms Upstairs.
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/downstairs.JPG" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Rooms Downstairs
                    </p>
                </div>
            </div>

        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

